<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5DADE2"
    tools:context="com.example.admin.schoolreport.TeacherAdmin">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Sudent Data"
            android:layout_gravity="center"
            android:textSize="30sp"
            android:layout_marginBottom="30dp"
            android:textColor="#947555"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/NameSurname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#7845"
                android:textColor="#fff"
                android:layout_weight="1"
                android:text="Name and Surname   " />

            <EditText
                android:id="@+id/editText_name"
                android:layout_width="wrap_content"
                android:background="#3425"
                android:textColor="#000"
                android:layout_marginLeft="16dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/Identity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#7845"
                android:textColor="#fff"
                android:layout_weight="1"
                android:text="Identity  " />

            <EditText
                android:id="@+id/editText_identity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:layout_weight="1"
                android:background="#3425"
                android:ems="10"
                android:inputType="textPersonName"
                android:textColor="#000" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/Grade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#7845"
                android:text="Grade                           "
                android:textColor="#fff" />

            <EditText
                android:id="@+id/editText_grade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:background="#3425"
                android:ems="10"
                android:inputType="textPersonName"
                android:textColor="#000" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/Date"
                android:background="#7845"
                android:textColor="#fff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date                              " />

            <EditText
                android:id="@+id/editText_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:background="#3425"
                android:ems="10"
                android:inputType="textPersonName"
                android:textColor="#000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/English"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#7845"
                android:layout_marginLeft="5dp"
                android:textColor="#fff"
                android:text="English" />

            <EditText
                android:id="@+id/editText_english"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:background="#3425"
                android:textColor="#000"
                android:layout_marginLeft="16dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/Maths"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#7845"
                android:textColor="#fff"
                android:text="Maths" />

            <EditText
                android:id="@+id/editText_maths"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:background="#3425"
                android:textColor="#000"
                android:layout_marginLeft="16dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/History"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#7845"
                android:textColor="#fff"
                android:text="History" />

            <EditText
                android:id="@+id/editText_History"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:background="#3425"
                android:textColor="#000"
                android:layout_marginLeft="16dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/NaturalScience"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#7845"
                android:textColor="#fff"
                android:text="Natural Science" />

            <EditText
                android:id="@+id/editText_naturalScience"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:background="#3425"
                android:textColor="#000"
                android:layout_marginLeft="16dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/LifeOrientation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#7845"
                android:textColor="#fff"
                android:text="Life Orientation" />

            <EditText
                android:id="@+id/editText_lifeOrientation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:background="#3425"
                android:textColor="#000"
                android:layout_marginLeft="16dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/Geography"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#7845"
                android:textColor="#fff"
                android:text="Geography" />

            <EditText
                android:id="@+id/editText_Geography"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:background="#3425"
                android:textColor="#000"
                android:layout_marginLeft="16dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/Economics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#7845"
                android:textColor="#fff"
                android:text="Economics" />

            <EditText
                android:id="@+id/editText_Economics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:background="#3425"
                android:textColor="#000"
                android:layout_marginLeft="16dp"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/Status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#7845"
                android:textColor="#fff"
                android:text="Status                           " />

            <EditText
                android:id="@+id/editText__status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:background="#3425"
                android:textColor="#000"
                android:layout_marginLeft="16dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#7845"
                android:textColor="#fff"
                android:text="Student Number                          " />

            <EditText
                android:id="@+id/editText__student_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="used to update and delete"
                android:inputType="textPersonName"
                android:background="#3425"
                android:textColor="#000"
                android:layout_marginLeft="16dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <Button
                android:id="@+id/btnAdd"
                android:layout_width="80dp"
                android:onClick="AddData"
                android:layout_height="60dp"
                android:background="@drawable/mybutton"
                android:layout_weight="1"
                android:text="ADD data" />

            <Button
                android:id="@+id/btn_Update"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:background="@drawable/mybutton"
                android:layout_weight="1"
                android:text="update" />

            <Button
                android:id="@+id/btn_Delete"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:background="@drawable/mybutton"
                android:layout_weight="1"
                android:text="delete" />

            <Button
                android:id="@+id/btn_ViewData"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:background="@drawable/mybutton"
                android:layout_weight="1"
                android:text="view data" />

            <Button
                android:id="@+id/btn_calculateAverage"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:background="@drawable/mybutton"
                android:layout_weight="1"
                android:text="Average" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>




